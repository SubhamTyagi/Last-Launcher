<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/text_color_sniffer_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Color Sniffer"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch_color_sniffer_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:background="#DEDEDE"
        android:foregroundGravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/color_sniffer_clipboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="From Clipboard"
        android:textSize="20sp" />

    <View
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:background="#DEDEDE"
        android:foregroundGravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/color_sniffer_external_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="From ColorSniffer App"
        android:textSize="20sp" />


</LinearLayout>