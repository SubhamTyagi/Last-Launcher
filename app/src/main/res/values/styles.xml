<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:popupAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:listPreferredItemPaddingLeft">25dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>


    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">#FF8F8C8C</item>
        <!--<item name="android:switchTextAppearance">#FF8F8C8C</item>-->
        <item name="android:background">@android:color/black</item>
    </style>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/black</item>
    </style>

    <style name="AppBaseTheme.Shadow" parent="AppBaseTheme">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Wallpaper" parent="android:Theme.Wallpaper.NoTitleBar">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:popupAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:listPreferredItemPaddingLeft">5dp</item>
        <item name="android:listPreferredItemPaddingRight">5dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <!--<item name="android:switchTextAppearance">#FFFFff</item>-->
        <item name="android:popupBackground">#FF000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Black" parent="AppBaseTheme">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
       <!-- <item name="android:switchTextAppearance">@android:color/white</item>-->
    </style>

    <style name="White" parent="AppBaseTheme">

        <item name="android:background">#FFFFFFFF</item>
        <item name="android:textColor">#FF000000</item>
        <!--<item name="android:switchTextAppearance">#FF000000</item>-->
    </style>

    <style name="BlackonGrey" parent="AppBaseTheme">

        <item name="android:background">#cdd8da</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:textColor">#FFFFFFFF</item>
       <!-- <item name="android:switchTextAppearance">#FFFFFFFF</item>-->
    </style>

    <style name="A" parent="AppBaseTheme">
        <item name="android:background">#d5e0e2</item>
        <item name="android:textColor">#FF000000</item>
        <!--<item name="android:switchTextAppearance">#FF000000</item>-->
    </style>


    <style name="Hacker.green" parent="AppBaseTheme">
        <item name="android:background">#000000</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:textColor">#FF00ff00</item>
       <!-- <item name="android:switchTextAppearance">#FF00ff00</item>-->
    </style>

    <style name="Hacker.red" parent="AppBaseTheme">

        <item name="android:background">#000000</item>
        <item name="android:shadowColor">#BADA0F0F</item>
        <item name="android:textColor">#FF00ff00</item>
       <!-- <item name="android:switchTextAppearance">#FF00ff00</item>-->
    </style>


</resources>
